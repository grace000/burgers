<h1>Eat Dat Burger</h1>

<h2>Ready to Eat!</h2>

<ol>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        {{> burgers/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ol>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <!-- <label for="slee">Hungry?</label><br> -->
    <!-- <input type="radio" name="devoured" value="0" checked> Hungry! -->
     <button type="submit" name="devoured" value="0">Hungry? Add Burger</button>
  </div>
    
  <!-- <button type="submit">Add Burger</button> -->
</form>

