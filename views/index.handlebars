<div class="container">
  <div class="row" id="content-gutterless">
    <div class="col-md-12">

      <div class="row" id="content-wrapper">
        <div class="col-md-4" id="burger-header">
          <p>Eat Da Burger</p>
        </div>
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-12" id="burger-wrapper">
              
              <div class="row" id="add-burger">
                <form class="create-update-form" action="/" method="POST">
                  <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="burger_name">
                  </div>

                  <div class="form-group">
                     <button class="btn btn-danger" type="submit" name="devoured" value="0">HUNGRY? Add Burger</button>
                  </div>    
                </form>
              </div>

              <div class="row" id="ready-to-eat">
                <h2>Ready to Eat!</h2>
                  <div>
                    {{#each burgers}}
                      {{#unless this.devoured}}
                        <li>
                          {{this.burger_name}}
                          {{> burgers/delete-burger}}
                        </li>
                      {{/unless}}
                    {{/each}}
                  </div>
              </div>

              <div class="row" id="devoured">
                <h2>Devoured Burgers!</h2>
                  <div>
                    {{#each burgers}}
                      {{#if devoured}}
                      <li>
                        <p>{{this.id}}. {{this.burger_name}}</p>
                      </li>
                      {{/if}}
                    {{/each}}
                  </div>
              </div>
            
            </div>
          </div>
        </div>
      </div><!--close main row-->


    </div>
  </div><!--close content-wrapper-->
</div><!--close container-fluid-->



